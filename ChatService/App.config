<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    <system.serviceModel>
        <behaviors>
            <serviceBehaviors>
                <behavior name="">
                    <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
                    <serviceDebug includeExceptionDetailInFaults="true" />
                </behavior>
            </serviceBehaviors>
        </behaviors>

        <services>
          <service name="ChatService.ChatService">
            <host>
              <baseAddresses>
                <add baseAddress="http://localhost:1230/Chat"/>
              </baseAddresses>
            </host>
            <endpoint address="" binding="basicHttpBinding"
                      bindingConfiguration="" contract="ChatLib.IChatService" />
          </service>
          <service name="ChatService.PollingChat">
            <host>
              <baseAddresses>
                <add baseAddress="http://localhost:1230/PolingChat"/>
              </baseAddresses>
            </host>
            <endpoint address="" binding="basicHttpBinding"
                      bindingConfiguration="" contract="ChatLib.IPollingChat" />
          </service>
        </services>
    </system.serviceModel>
</configuration>